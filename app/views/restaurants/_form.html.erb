<%= form_for @restaurant do |t| %>
<div class="form-group">
  <%= t.label :name %>
  <%= t.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= t.label :phone %>
  <%= t.text_field :phone, class: 'form-control' %>
</div>
<div class="form-group">
  <%= t.label :address %>
  <%= t.text_field :address, class: 'form-control'%>
</div>
<div class="form-group">
  <%= t.label :description %>
  <%= t.text_area :description, class: 'form-control', rows: 6 %>
</div>
<div class="form-group">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <%= t.submit class: 'btn btn-primary' %>
</div>
<% end %>
