<div class="card">
  <img class="card-img-top restaurant-image" src="http://secretmenus.com/wp-content/uploads/2014/05/chesecake-logo.png" alt="Card image cap">
  <div class="card-block">
    <h4 class="card-title"><%= @restaurant.name %></h4>
    <p class="card-text"><%= @restaurant.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @restaurant.address %></li>
    <li class="list-group-item"><%= @restaurant.phone %></li>
  </ul>
  <div class="card-block">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
